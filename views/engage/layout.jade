	body
		div#header
			div.row.clearfix
				div.eight.columns#nav-bar
					ul.hide-for-small#options
						li
							a(href="/")
								img(href="/", src="/images/engage/SFUEngage_draft3-03.png")
						li
							a#all_btn(href="/") All Resources
						li
							a#contruibutions_btn(href="/mine") Your Contributions
						li
							a#starred_btn(href="/starred") Starred
						li
							a#instructor_btn(href="/instructor") Instructor Posts
				
				div.four.columns.dropdowns#user_options					
					ul#user_options_list
						script(type='text/javascript')
							function dropdownToggle(id){
								$(id).toggle();
								}
						li
							div(onClick="dropdownToggle('#course_list')")
								span Courses
								span.typicn.next
							div.dropdown_list#course_list
								ul
									each item in courses
										li.courses
											a(href="../course/#{item.subject+'-'+item.number+'-'+item.section}") #{item.subject+' '+item.number}
	
						li
							div(onClick="dropdownToggle('#user_info')")
								span #{ user.firstName } #{ user.lastName }
								span.typicn.next
							div.dropdown_list#user_info
								ul
									li
										a(href="/profile/#{user.uuid}") My Profile
									li
										a(href="/preference") Preference
									li
										a(href="/logout") Logout
										

						li#notification
							div(onClick="dropdownToggle('#notif')")
								img.avatar(src="http://m4.licdn.com/mpr/mpr/shrink_100_100/p/2/000/0e8/1e8/1f4efb2.jpg") 
								span#notification_number 4
							div.dropdown_list#notif
								ul
									li
										a.notification
											img.user_avatar(src="/images/engage/default_profile.png")
											p.msg 
												span.username Mark 
												| just shared an resource in 
												span.coursename IAT 200.
									li
										a.notification
											img.user_avatar(src="http://m4.licdn.com/mpr/mpr/shrink_100_100/p/2/000/0e8/1e8/1f4efb2.jpg") 
