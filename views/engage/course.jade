extends layout

block content
	div.row#courseinfo
		div.three.columns
			div.innercontents
				h4 #{course} - D100
					ul
						li Intructor: 
							span Bernie M.
						li Email: 
							span bmaroney@sfu.ca
					ul 
						li TA: 
							span Alice W.
						li Email: 
							span alicew@sfu.ca
					ul 
						li TA: 
							span George S.
						li Email: 
							span georges@sfu.ca
		div.nine.columns
			div.innercontents
				p course calendar goes here
				
	div.row#articles
		- var counter = 0 
		each article in courseArticles
			- var coursename = i.course
		
			if article.user.type == 1
				dataclass = "prof"
			div.three.columns
				div.innercontents
					b #{article.user.firstName} #{article.user.lastName}
					if article.user.type == 1
						span.typicn.tick#prof(title="instructor")
					div.post_details 
						p Posted in 
							span.coursename #{coursename}
							span.post_time(id="post_time_#{counter}") 
							
					h5
						a(href="/article/#{article.id}") #{article.title}
					div.imgpreview(id="img_#{counter}")
					div.articlepreview(id = "preview_#{counter}")
					div.likescomments
						if article.starred == 1
							span.typicn.star.starred
						else
							span.typicn.star
						span Like (#{article.likes})
						span Comment (5)
					script(type='text/javascript')
						var now = new Date();
						var post_time = new Date(Date.parse(" #{article.uploaded_on} "));
						var prettytime = formatAgo(post_time, null, now);
						$('span#post_time_#{counter}').append(prettytime);
						$('div#preview_#{counter}').load("#{article.path} p");
						$('div#img_#{counter}').load("#{article.path} img:first");
					
					- counter = counter +1	
			
	