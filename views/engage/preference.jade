extends layout

block content
	div.row.clearfix
		div.twelve.columns
			div#preference
				dl.tabs
					dt Preferences
					dd.active
						a(href="#edit") Edit Profile
					dd 
						a(href="#notification") Notification
				ul.tabs-content
					li.active#editTab
						form(name="edit_profile", action="/preference",enctype="multipart/form-data", method="post")
						div#avatar_column.columns
							img.avatar(src="https://secure.gravatar.com/avatar/aa50677b765abddd31f3fd1c279f75e0?s=140&d=https://a248.e.akamai.net/assets.github.com%2Fimages%2Fgravatars%2Fgravatar-140.png") 
							div#upload_avatar upload
							a remove photo
						div#edit_info_column.columns
							div#edit_box
								h4 #{user.firstName} #{user.lastName}
								label Preferred Name:
								input(type="text", maxlength="20")
								label Academic Bio:
								textarea(type="text")
								input.button(type="submit", value="save changes")
					li#notificationTab
						div#notification
							h4 Notifications
							form(name="edif_nofication", action="/preference",enctype="multipart/form-data", method="post")

								ul
									li 
										input(type="checkbox") 
										span Notify me when users comment on my shares
									li 
										input(type="checkbox") 
										span Notify me when users like my shares
									li 
										input(type="checkbox") 
										span Notify me when users star my shares
									li 
										input(type="checkbox") 
										span Notify me when users reply to my comments
									li 
										input(type="checkbox") 
										span Email me when users comment on my shares
									li 
										input(type="checkbox") 
										span Email me when users like my shares
									li 
										input(type="checkbox") 
										span Email me when users star my shares
									li 
										input(type="checkbox") 
										span Email me when users reply to my comments
								input.button(type="submit", value="save changes")