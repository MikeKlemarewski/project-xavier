extends layout

block content
	div.row.clearfix
		div.twelve.columns
			div#preference
				dl.tabs
					dt Preferences
					dd.active
						a(href="#edit") Edit Profile
					dd 
						a(href="#notification") Notification
				ul.tabs-content
					li.active#editTab
						form(name="edit_profile", action="/preference",enctype="multipart/form-data", method="post")
							div#avatar_column.columns
								img.avatar(src=avatar) 
								div.browsebox
									input(type="file", name="upload", onchange = "this.form.submit()")
									div#upload_avatar upload
								
								a remove photo
							div#edit_info_column.four.columns
								div#edit_box
									h4 #{user.firstName} #{user.lastName}
									label Preferred Name:
									input(type="text", name="pref_name", maxlength="20", value=pref_name)
									label Academic Bio:
									textarea(type="text", name="bio", value=bio)
									input.button(type="submit", value="save changes")
					li#notificationTab
						div#notification
							form(name="edif_nofication", action="/preference",enctype="multipart/form-data", method="post")
								h4 Notifications
								p 
									|An email will automatically be sent to your inbox when one or more of the events occur.	
									br
									| You may also uncheck the boxes to turn these off at any time you would like.
								div#setting_detail
									ul
										li
											span
										li 
											span When others comment on my shares
										li 
											span When others like my shares
										li 
											span When others reply to my comments
											
									ul.checkbox_column
										li
											span.typicn.star
											span.typicn.mail
										li 
											input(type="checkbox") 
											input(type="checkbox") 
										li 
											input(type="checkbox") 
											input(type="checkbox") 
										li 
											input(type="checkbox") 
											input(type="checkbox") 
								
									input.button(type="submit", value="save changes")