include ./component/header

div#Container
	div#ManageHeader
		div#LeftHeaderDiv
			a(onclick="window.history.back();", class='BackLink') Back
		div#RightHeaderDiv

	div#Content
		a.Archives.Button(class="Button", href="", onclick="return showUploadForm();") Upload
		include ./component/manage-media-list

		div#UploadForm(style="display:none")
			a.Archives.Button(id="closeUploadButton", onclick="return hideUploadForm();") X
			form(action="/api/mediafile", enctype="multipart/form-data", method="POST")
				h1 UPLOAD YOUR MEDIA
				div#UploadDropDowns
					div#UploadCourseDD
						|Course
						div#UploadCourseOptions
							select(class="Selected", name="course")

					div#UploadSectionDD
						|Week
						div#UploadSectionOptions
							select(name="section")

				div#UploadFormFields
					div(class="form-row")
						span(class="FormRowText")
							|Title
						input(class="FormRowInput", type="text", name="title")
					div(class="form-row")
						span(class="FormRowText")
							|Description
						textarea(class="FormRowInput", name="description", cols="50", rows="10")
					input(type="file", name="mediafile", id="MediaFileUpload", style="visibility:hidden;")
					input(type="button", id="MockUploadButton", value="Upload Media")â€‹
					input(type="submit", value="DONE", id="MediaUploadSubmit")

		div#EditForm(style="display:none")
			a.Archives.Button(id="closeUploadButton", onclick="return hideEditForm();") X
			form(id="EditFormAction", action="/mediafile/:id/update", enctype="multipart/form-data", method="POST")
				h1 EDIT YOUR MEDIA

				div#UploadFormFields
					div(class="form-row")
						span(class="FormRowText")
							|Title: 
						input(class="FormRowInput EditTitle", type="text", name="title")
					div(class="form-row")
						span(class="FormRowText")
							|Description:
						textarea(class="FormRowInput EditDescription", name="description", cols="50", rows="10")
					input(type="submit", value="DONE", id="MediaEditSubmit")

script(type="text/javascript", src="../javascripts/accent/manage-media.js")